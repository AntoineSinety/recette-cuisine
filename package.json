{
  "name": "recette-cuisine",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:css": "stylelint \"src/**/*.scss\"",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tinymce/tinymce-react": "^6.3.0",
    "firebase": "^11.3.1",
    "gsap": "^3.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.5",
    "react-router-dom": "^7.2.0",
    "react-select": "^5.10.0",
    "react-webcam": "^7.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "sass": "^1.85.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "github:gcommeuneidee/stylelint-order",
    "vite": "^6.1.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "ignoreFiles": [
      "/build",
      "/node_modules",
      "/vendor"
    ],
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "at-rule-empty-line-before": null,
      "color-named": null,
      "comment-empty-line-before": null,
      "declaration-property-unit-allowed-list": null,
      "font-family-no-missing-generic-family-keyword": null,
      "function-url-quotes": "always",
      "no-descending-specificity": null,
      "no-duplicate-selectors": null,
      "rule-empty-line-before": null,
      "selector-class-pattern": "^[a-zA-Z0-9-_]+$",
      "selector-id-pattern": "^[a-zA-Z0-9-_]+$",
      "value-keyword-case": null,
      "scss/at-extend-no-missing-placeholder": null,
      "scss/at-rule-no-unknown": true,
      "scss/dollar-variable-pattern": "^[a-zA-Z0-9-_]+$",
      "scss/no-global-function-names": null,
      "scss/selector-no-redundant-nesting-selector": null,
      "order/order": [
        {
          "type": "at-rule"
        },
        "declarations",
        "custom-properties",
        "dollar-variables",
        {
          "type": "at-rule",
          "hasBlock": true
        },
        "less-mixins",
        "rules"
      ],
      "order/properties-order": [
        [
          {
            "groupName": "Position",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "position",
              "top",
              "right",
              "bottom",
              "left",
              "z-index",
              "border-box",
              "float",
              "clear"
            ]
          },
          {
            "groupName": "Display",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "display",
              "flex",
              "flex-grow",
              "flex-shrink",
              "flex-basis",
              "flex-direction",
              "flex-flow",
              "flex-wrap",
              "grid",
              "grid-area",
              "grid-template",
              "grid-template-areas",
              "grid-template-rows",
              "grid-template-columns",
              "grid-row",
              "grid-row-start",
              "grid-row-end",
              "grid-column",
              "grid-column-start",
              "grid-column-end",
              "grid-auto-rows",
              "grid-auto-columns",
              "grid-auto-flow",
              "grid-gap",
              "grid-row-gap",
              "grid-column-gap",
              "gap",
              "align-content",
              "align-items",
              "align-self",
              "justify-content",
              "justify-self",
              "order"
            ]
          },
          {
            "groupName": "Espace",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "width",
              "min-width",
              "max-width",
              "height",
              "min-height",
              "max-height",
              "box-sizing",
              "margin",
              "margin-top",
              "margin-right",
              "margin-bottom",
              "margin-left",
              "padding",
              "padding-top",
              "padding-right",
              "padding-bottom",
              "padding-left",
              "object-fit"
            ]
          },
          {
            "groupName": "Couleur",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "color",
              "background",
              "background-color",
              "background-image",
              "background-attachment",
              "background-position",
              "background-position-x",
              "background-position-y",
              "background-clip",
              "background-origin",
              "background-size",
              "background-repeat"
            ]
          },
          {
            "groupName": "Text",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "font",
              "font-family",
              "font-size",
              "line-height",
              "font-weight",
              "font-style",
              "font-variant",
              "font-size-adjust",
              "font-stretch",
              "text-align",
              "text-align-last",
              "text-decoration",
              "text-decoration-color",
              "text-decoration-line",
              "text-decoration-style",
              "text-emphasis",
              "text-emphasis-position",
              "text-emphasis-style",
              "text-emphasis-color",
              "text-indent",
              "text-justify",
              "text-rendering",
              "text-outline",
              "text-transform",
              "text-wrap",
              "text-overflow",
              "text-overflow-ellipsis",
              "text-overflow-mode",
              "text-shadow",
              "letter-spacing",
              "word-spacing",
              "word-wrap",
              "word-break"
            ]
          },
          {
            "groupName": "DÃ©coration",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "border",
              "border-spacing",
              "border-collapse",
              "border-width",
              "border-style",
              "border-color",
              "border-top",
              "border-top-width",
              "border-top-style",
              "border-top-color",
              "border-right",
              "border-right-width",
              "border-right-style",
              "border-right-color",
              "border-bottom",
              "border-bottom-width",
              "border-bottom-style",
              "border-bottom-color",
              "border-left",
              "border-left-width",
              "border-left-style",
              "border-left-color",
              "border-radius",
              "border-top-left-radius",
              "border-top-right-radius",
              "border-bottom-right-radius",
              "border-bottom-left-radius",
              "border-image",
              "border-image-source",
              "border-image-slice",
              "border-image-width",
              "border-image-outset",
              "border-image-repeat",
              "border-top-image",
              "border-right-image",
              "border-bottom-image",
              "border-left-image",
              "border-corner-image",
              "border-top-left-image",
              "border-top-right-image",
              "border-bottom-right-image",
              "border-bottom-left-image",
              "box-shadow",
              "outline",
              "outline-width",
              "outline-style",
              "outline-color",
              "outline-offset",
              "list-style",
              "list-style-position",
              "list-style-type",
              "list-style-image"
            ]
          },
          {
            "groupName": "Modification",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "transform",
              "transform-origin",
              "opacity",
              "visibility",
              "cursor",
              "overflow",
              "overflow-x",
              "overflow-y",
              "overflow-scrolling"
            ]
          },
          {
            "groupName": "Animation",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "animation",
              "animation-name",
              "animation-duration",
              "animation-play-state",
              "animation-timing-function",
              "animation-delay",
              "animation-iteration-count",
              "animation-direction",
              "animation-fill-mode",
              "transition",
              "transition-delay",
              "transition-timing-function",
              "transition-duration",
              "transition-property"
            ]
          },
          {
            "groupName": "Divers",
            "emptyLineBefore": "breakline",
            "noEmptyLineBetween": true,
            "noBreakLineBetween": true,
            "properties": [
              "pointer-event",
              "content",
              "appearance"
            ]
          }
        ],
        {
          "unspecified": "bottom",
          "emptyLineBeforeUnspecified": "breakline"
        }
      ]
    }
  }
}
