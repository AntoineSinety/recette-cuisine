# Sécurité additionnelle pour bloquer les bots
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquer les user agents suspects
    RewriteCond %{HTTP_USER_AGENT} (bot|spider|crawler|scraper) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquer les requêtes sans referer (sauf pour la page d'accueil)
    RewriteCond %{HTTP_REFERER} ^$
    RewriteCond %{REQUEST_URI} !^/$
    RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)$
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Désactiver l'affichage du contenu des dossiers
Options -Indexes

# Sécurité des en-têtes
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>